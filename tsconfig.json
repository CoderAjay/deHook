{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6", "es2018", "es2017"],
        "types": ["reflect-metadata", "node"],
        "rootDir": "src/",
        "outDir": "dist/",
        "declaration": true
    },
    "exclude": [
        "./node_modules",
        "./src/**/*.spec.ts",
        "assets",
        "test",
        "tmp",
        "fixtures",
        ".temp"
    ]

}